{
  "name": "michavie/statamic-bearhub",
  "description": "BearHub is a Statamic Add-on that helps you sync your Bear App Notes with Statamic collections.",
  "type": "statamic-addon",
  "license": "proprietary",
  "authors": [
    {
      "name": "Micha Vie",
      "email": "micha@freeiam.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Michavie\\Bearhub\\": "src"
    }
  },
  "extra": {
    "statamic": {
      "name": "Bearhub",
      "description": "Bearhub addon"
    },
    "laravel": {
      "providers": [
        "Michavie\\Bearhub\\ServiceProvider"
      ]
    }
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "statamic/cms": "3.0.* || 3.1.*"
  },
  "require-dev": {
    "spatie/ray": "^1.22"
  }
}
